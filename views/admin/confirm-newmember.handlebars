<div class="row" style="justify-content: center;">
  <div class="col-6">
    <form>
      <div class="mb-3">
        <label for="account" class="form-label">序號</label>
        <input type="text" class="form-control" id="account" name="account" value="{{member.account}}" disabled>
      </div>

      <div class="mb-3">
        <label for="name" class="form-label">姓名</label>
        <input type="text" class="form-control" id="name" name="name" value="{{member.name}}" disabled>
      </div>

      <div class="mb-3">
        <div>
          <label for="gender" class="form-label">性別</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="gender" id="men" value="1" {{#ifCond member.gender '1' }}
            checked {{/ifCond}} disabled>
          <label class="form-check-label" for="men">男</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="gender" id="women" value="2" {{#ifCond member.gender '2' }}
            checked {{/ifCond}} disabled>
          <label class="form-check-label" for="women">女</label>
        </div>
      </div>

      <div class="mb-4">
        <label for="class" class="form-label">班別</label>
        <select class="form-select" aria-label="class" id="class" name="class">
          <option value="{{member.classId}}" selected disabled>{{className}}</option>
        </select>
      </div>
    </form>
    <a href="/admin/home" class="btn btn-primary me-3">確認送出</a>
    <a href="/admin/edit/{{member.account}}" class="btn btn-outline-primary">修改資料</a>
  </div>
</div>
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-2">
  <div class="container-fluid">
    <h3 class="navbar-brand">修改學員資料 </h3>
  </div>
</nav>

<div class="row" style="justify-content: center;">
  <div class="col-6">
    <form action="/admin/edit/{{member.account}}?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="account" class="form-label">序號</label>
        <input type="text" class="form-control" id="account" name="account" value="{{member.account}}" disabled>
      </div>

      <div class="mb-3">
        <label for="name" class="form-label">姓名</label>
        <input type="text" class="form-control" id="name" name="name" value="{{member.name}}" required>
      </div>

      <div class="mb-3">
        <div>
          <label for="gender" class="form-label">性別</label>
        </div>
        {{#if member.gender }}
        {{#ifCond member.gender '1' }}
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="gender" id="men" value="1" checked>
          <label class="form-check-label" for="men">男</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="gender" id="women" value="2">
          <label class="form-check-label" for="women">女</label>
        </div>
        {{/ifCond}}
        {{#ifCond member.gender '2' }}
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="gender" id="men" value="1">
          <label class="form-check-label" for="men">男</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="gender" id="women" value="2" checked>
          <label class="form-check-label" for="women">女</label>
        </div>
        {{/ifCond}}
        {{else}}
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="gender" id="men" value="1">
          <label class="form-check-label" for="men">男</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="gender" id="women" value="2">
          <label class="form-check-label" for="women">女</label>
        </div>
        {{/if}}
      </div>

      <div class="mb-4">
        <label for="class" class="form-label">班別</label>
        <select class="form-select" aria-label="class" id="class" name="class" required>
          <option value="{{member.classId}}" selected>{{className}}</option>
          {{#each classes}}
          <option value="{{this.id}}">{{this.name}}</option>
          {{/each}}
        </select>
      </div>
      <button type="submit" class="btn btn-primary me-3">確認修改</button>
      <a class="btn btn-outline-primary" href="javascript:history.back()">返回</a>
    </form>
  </div>
</div>
<div class="row" style="justify-content: center;">
  <div class="col-6">
    <form action="/admin/addMember" method="post">
      <div class="mb-3">
        <label for="name" class="form-label">姓名</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>

      <div class="mb-3">
        <div>
          <label for="gender" class="form-label">性別</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="gender" id="men" value="1" required>
          <label class="form-check-label" for="men">男</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="gender" id="women" value="2" required>
          <label class="form-check-label" for="women">女</label>
        </div>
      </div>

      <div class="mb-3">
        <label for="birthday" class="form-label">生日</label>
        <input type="date" class="form-control" id="birthday" name="birthday">
      </div>

      <div class="mb-4">
        <label for="class" class="form-label">班別</label>
        <select class="form-select" aria-label="class" id="class" name="class" required>
          <option selected disabled value="">請選擇班別</option>
          {{#each classes}}
          <option value="{{this.id}}">{{this.name}}</option>
          {{/each}}
        </select>

      </div>
      <button type="submit" class="btn btn-primary me-3">新增學員</button>
      <a class="btn btn-outline-primary" href="javascript:history.back()">返回</a>
    </form>
  </div>
</div>